<%include ../partials/header%>

<div id="page-wrapper">
    <div class="container-fluid">
    <!-- Page Heading -->
        <div class="row" id="main" >
            <div class="col-sm-12 col-md-12 well" id="content">
                <img id="superuserPhoto" src="<%=superuser.photo%>" class="avatar img-circle img-thumbnail" alt="avatar">
                <h2 id="welcome">Welcome <%=superuser.firstName%></h2>
                <h4 id="welcome"><%=superuser.company%></h4>
                <h5 id="welcome">Clients</h5>
                <a href="/superuser/<%=superuser._id%>"><i class="fa fa-arrow-left" aria-hidden="true"></i></a>
                <form id="searchForm" class="form-inline" action="/superuser/<%=superuser._id%>/client" method="GET">
                    <label class="sr-only" for="inlineFormInputGroup">Search</label>
                    <div class="input-group mb-2 mr-sm-2 mb-sm-0">
                        <div class="input-group-addon">
                            <button id="searchButton" type="submit"><i class="fa fa-search" aria-hidden="true"></i></button>
                        </div>
                        <input type="text" class="form-control" id="inlineFormInputGroup" placeholder="Search" name="search">
                    </div>
                </form>
            </div>
            <!--Displaying all the clients-->
            <div class="container" style="padding-top: 60px;">
                <!--ROW START-->
                <div class="row">
                    <%superuser.clients.forEach(function(client){%>
                        <div class="col-md-4 col-sm-6 col-xs-12">
                            <div class="thumbnail">
                                <div class="text-center">
                                     <a id="image" href="/superuser/<%=superuser._id%>/client/<%=client._id%>"><img src="<%=client.photo%>" class="avatar img-circle img-thumbnail" alt="avatar"></a>
                                    <div class="caption">
                                        <h3><%=client.firstName+" "+client.lastName%></h3>
                                        <p><strong>Legal Guardian: </strong><%=client.guardian%></p>
                                        <p><strong>Phone: </strong><%=client.phone%></p>
                                        <p><strong>Diagnosis: </strong><%=client.diagnosis%> </p>
                                        <p><strong>Medicaid Number: </strong><%=client.medicaidNumber%></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <%})%>
                </div>
                <!--ROW FINISH-->
            </div>
        </div>
            <!-- /.row -->
    </div>
        <!-- /.container-fluid -->
</div>
    <!-- /#page-wrapper -->




<%include ../partials/footer%>