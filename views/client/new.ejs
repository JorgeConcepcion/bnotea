<%include ../partials/header%>


<div class="container-fluid" style="padding-top: 60px;">
  <h1 class="page-header">New Client</h1>
  <form  method="POST" action="/superuser/<%=superuserID%>/client" class="form-horizontal" >
    <div class="col-sm-8 col-xs-12 ">
    <!--Form to create a client-->
      <div class="form-group">
        <label class="col-lg-3 control-label">First name:</label>
        <div class="col-lg-8">
          <input class="form-control" placeholder="first name" name="client[firstName]" type="text" data-validation="required" data-validation-error-msg="The first name is required">
        </div>
      </div>
      <div class="form-group">
        <label class="col-lg-3 control-label">Last name:</label>
        <div class="col-lg-8">
          <input class="form-control" placeholder="last name" name="client[lastName]" type="text" data-validation="required" data-validation-error-msg="The last name is required">
        </div>
      </div>
      <div class="form-group">
        <label class="col-lg-3 control-label">Guardian name:</label>
        <div class="col-lg-8">
          <input class="form-control" placeholder="guardian name" name="client[guardian]" type="text">
        </div>
      </div>
      <div class="form-group">
        <label class="col-lg-3 control-label">Phone:</label>
        <div class="col-lg-8">
          <input class="form-control" placeholder="phone" name="client[phone]" type="text" data-validation="length" data-validation-length="10" data-validation-optional="true"  data-validation-error-msg="Wrong phone format">
        </div>
      </div>
      <div class="form-group">
        <label class="col-lg-3 control-label">Diagnosis:</label>
        <div class="col-lg-8">
          <input class="form-control" placeholder="diagnosis" name="client[diagnosis]" type="text">
        </div>
      </div>
      <div class="form-group">
        <label class="col-lg-3 control-label">Medicaid Number:</label>
        <div class="col-lg-8">
          <input class="form-control" placeholder="medicaid number" name="client[medicaidNumber]" type="text" data-validation="length" data-validation-length="10"  data-validation-optional="true" data-validation-error-msg="The medicaid number must be 10 digits">
        </div>
      </div>
      <div class="form-group">
        <label class="col-md-3 control-label"></label>
        <div class="col-md-8">
          <button class="btn btn-primary">Add</button> 
          <span></span>
          <a href="/superuser/<%=superuserID%>" class="btn btn-default"> Cancel</a>
        </div>
      </div>
    </div>
  </form>
</div>
    




<%include ../partials/footer%>