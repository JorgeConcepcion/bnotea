
<%include ../partials/header%>

<div id="login-overlay" class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <h4 class="modal-title" id="myModalLabel">Login to B-Note-A</h4>
    </div>
    <div class="modal-body">
      <div class="row">
        <div class="col-xs-12">
          <div class="well">
            <form id="loginForm" method="POST" action="/login" >
              <div class="form-group">
                <label for="username" class="control-label">Username</label>
                <input type="text" class="form-control" id="username" name="username"  required="" title="Please enter you username" placeholder="username">
                <span class="help-block"></span>
              </div>
              <div class="form-group">
                <label for="password" class="control-label">Password</label>
                <input type="password" class="form-control" id="password" name="password"  required="" title="Please enter your password" placeholder="password">
                <span class="help-block"></span>
              </div>
              <button class="btn btn-success btn-block">Login</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
  
<%include ../partials/footer %>