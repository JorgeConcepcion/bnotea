<%include ../partials/header%>

<div id="page-wrapper">
    <div class="container-fluid">
        <!-- Page Heading -->
            <div class="row" id="main" >
                <div class="col-sm-12 col-md-12 well "  id="content">
                    <img id="superuserPhoto" src="<%=superuser.photo%>" class="avatar img-circle img-thumbnail" alt="avatar">
                    <h2 class="welcome">Welcome <%=superuser.firstName%></h2>
                    <h4 class="welcome"><%=superuser.company%></h4>
                    <h5 class="welcome">Analists</h5>
                    <a href="/superuser/<%=superuser._id%>/analist/<%=analist._id%>"><i class="fa fa-arrow-left" aria-hidden="true"></i></a>
                </div>
                <div class="container-fluid" style="padding-top: 60px;">
                <!--Displaying the analist picture-->
                    <div class="row">
                        <div class="col-md-2 col-sm-2 col-xs-2">
                            <img id="dashPhoto" src="<%=analist.photo%>" class="avatar img-circle img-thumbnail" alt="avatar">
                        </div>
                         <div class="col-md-6 col-sm-6 col-xs-6">
                            <h2><%=analist.firstName+" "+analist.lastName%></h2>
                             <div >
                            <h6>Upload a different photo...</h6>
                            <input type="file" class=" well-sm">
                             </div>
                        </div>
                   </div>
                   <!--Form to edit an analist-->
                   <form  method="POST" action="/superuser/<%=superuser._id%>/analist/<%=analist._id%>?_method=PUT" class="form-horizontal">
                       <div class="row">
                           <div class="col-md-3 col-sm-3 col-xs-3">
                               <h4 class="page-header">Info</h4> 
                           </div>
                       </div>
                       <div class="row">
                           <div class="col-md-6 col-sm-12 col-xs-12 ">
                                <div class="form-group">
                                  <label class="col-lg-3 control-label">First name:</label>
                                  <div class="col-lg-8">
                                    <input class="form-control" value="<%=analist.firstName%>" name="analist[firstName]" type="text">
                                  </div>
                                </div>
                                <div class="form-group">
                                  <label class="col-lg-3 control-label">Last name:</label>
                                  <div class="col-lg-8">
                                    <input class="form-control" value="<%=analist.lastName%>" name="analist[lastName]" type="text">
                                  </div>
                                </div>
                                <div class="form-group">
                                  <label class="col-lg-3 control-label">Phone:</label>
                                  <div class="col-lg-8">
                                    <input class="form-control" value="<%=analist.phone%>" name="analist[phone]" type="text">
                                  </div>
                                </div>
                                <div class="form-group">
                                  <label class="col-lg-3 control-label">Email:</label>
                                  <div class="col-lg-8">
                                    <input class="form-control" value="<%=analist.email%>" name="analist[email]" type="email">
                                  </div>
                                </div>
                                <div class="form-group">
                                  <label class="col-lg-3 control-label">Provider ID</label>
                                  <div class="col-lg-8">
                                    <input class="form-control" value="<%=analist.providerId%>" name="analist[providerId]" type="text">
                                  </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                           <div class="col-md-8 col-sm-6 col-xs-6">
                               <input class="btn btn-success" type="submit" value="Save">
                               <a class="btn btn-danger"href="/superuser/<%=superuser._id%>/analist/<%=analist._id%>">Cancel</a>
                           </div>
                       </div>
                   </form>
               </div>
            </div> 
                <!-- /.row -->
    </div>
        <!-- /.container-fluid -->
</div>
    <!-- /#page-wrapper -->




<%include ../partials/footer%>



 